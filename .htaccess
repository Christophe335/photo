# Optimisations HTTP : cache long pour ressources statiques, compression et sécurité

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/font-ttf "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresDefault "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
    # Far-future cache for common static file types
    <FilesMatch "\.(?:css|js|jpg|jpeg|png|gif|webp|svg|woff2?|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # No caching for dynamic pages
    <FilesMatch "\.(?:php|html)$">
        Header set Cache-Control "private, no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
    </FilesMatch>

    # Remove ETag to rely on cache-control / Last-Modified
    FileETag None
    Header unset ETag

    # Security helpers
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

<IfModule mod_deflate.c>
    # Compression for text-based assets
    <IfModule mod_filter.c>
        AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript application/json
    </IfModule>
</IfModule>

# Versioning note: pour bénéficier pleinement du cache long, appliquez un fingerprint (hash) aux noms de fichiers static (css/js/images)
